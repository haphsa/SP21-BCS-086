// services.pug

doctype html
html
  head
    meta(charset="UTF-8")
    title landing page
    link(href="/stylesheets/style.css", rel="stylesheet", type="text/css")

  body
    audio(id="backgroundMusic", loop, controls)
      source(src="/images/sematary.mp3", type="audio/mpeg")
      

    style.
      #backgroundMusic {
        position: fixed;
        top: -100px;
        left: -100px;
        width: 1px;
        height: 1px;
        opacity: 0;
        pointer-events: none;
      }

    script.
      document.addEventListener('DOMContentLoaded', function () {
        var audio = document.getElementById('backgroundMusic');
        audio.play();
      });

    
    div
      img(src="/images/lightning-bolt-png-3.png", class="light")

    div.container
      div.flex1
        div.navbar
          div.gif-container
            img(src="/images/skull.gif", alt="GIF 2", class="gif")
          img(style="width: 300px; height: 130%;", src="/images/Krow8logo.gif")

        div.navbar2
          a(href="/", class="tab tab1") HOME
          a(href="/services", class="tab tab2") SERVICES
          a(href="/projects", class="tab tab3") PROJECTS
          a(href="/products", class="tab tab3") PRODUCTS
          a(href="/imagegallery", class="tab tab4") IMAGE GALLERY
          a(href="/login", class="tab tab5") LOG OUT
          div.spacer

        div.navbar3
          div.scrolling-text STREETWEAR&nbsp;&nbsp;&nbsp;HOODIES&nbsp;&nbsp;&nbsp;SWEATPANTS&nbsp;&nbsp;&nbsp;JEANS&nbsp;&nbsp;&nbsp;JACKETS&nbsp;&nbsp;&nbsp;TSHIRTS&nbsp;&nbsp;&nbsp;SKIRTS&nbsp;&nbsp;&nbsp;HATS&nbsp;&nbsp;&nbsp;BELTS&nbsp;&nbsp;&nbsp;FASHION

      div.flex3(style="height: 900px; overflow: auto;")
        each service in services
          .service-box
            h1= service.name
            h2(style="color: yellow;")= service.description
            a(href="/services/delete/"+service._id, style="color: white;border-radius:5px;  background-color: red; padding: 10px; display: inline-block; text-decoration: none; margin-top: 10px;") Delete

div.navbar2
  // ...

div.flex2(style="height: 250px; display: flex; align-items: center; justify-content: center; flex-direction: column; color: white;")
  form(action="/services", method="post")
    .form-group
      label(for="id") Service ID
      div
        input#id(type="text", class="form-control", name="id", placeholder="Enter Service ID")
    .form-group
      label(for="name") Service Name
      div
        input#name(type="text", class="form-control", name="name", placeholder="Enter Service Name")
    .form-group
      label(for="description") Service Description
      div
        input#description(type="text", class="form-control", name="description", placeholder="Enter Service Description")
    input(type="submit", class="btn btn-info", value="Add Service")
